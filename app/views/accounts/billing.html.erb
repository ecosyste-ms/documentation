<%= render 'accounts/header' %>

<div class="container">
  <div class="row">
    <div class="col-12 col-lg-3">
      <%= render 'accounts/navigation' %>
    </div>
    <div class="col-12 col-lg-9">
      <h1 class="mb-4">Billing</h1>
      <div class="row">
        <div class="col col-lg-7">
          <div class="well p-3 rounded">
            <h2 class="h4">Payment method</h2>
            <p>
              <%= bootstrap_icon 'credit-card', width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'me-2' %>
              <%= @account.payment_method_type %> ending in <code><%= @account.payment_method_last4 %></code> expiry <code><%= @account.payment_method_expiry %></code>
            </p>
            <p class="small"><a href="#">Add new</a>  <a href="#">Edit</a></p>
          </div>
        </div>
        <div class="col col-lg-5">
          <h2 class="h6 fw-normal">Your plan</h2>
          <h3 class="h4"><%= @account.plan_name %></h3>
          <p class="small"><strong><%= number_with_delimiter(@account.plan_requests) %> requests</strong> per hour at <strong>$<%= @account.plan_price %></strong> per month</p>
          <p class="small mb-0">Billed <em><%= @account.plan_billing_period %></em></p>
          <p class="small"><a href="#">Change</a></p>
          <hr />
          <p class="small mb-0">Next payment due <strong><%= @account.next_payment_date.strftime('%b %d, %Y') %></strong></p>
        </div>
      </div>
      <h2 class="h3 mt-4 mb-3">Billing history</h2>
      <div class="table-responsive">
        <table class="table">
          <thead class="table-light">
            <tr>
              <th scope="col">Month</th>
              <th scope="col">Amount</th>
              <th scope="col">Invoice</th>
            </tr>
          </thead>
          <tbody>
            <% @account.billing_history.each do |billing| %>
              <tr>
                <td><%= billing.month %></td>
                <td><%= billing.formatted_amount %></td>
                <td><a href="<%= billing.invoice_url %>">View Invoice</a></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
