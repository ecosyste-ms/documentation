<%= render 'accounts/header' %>

<div class="container">
  <div class="row">
    <div class="col-12 col-lg-3">
      <%= render 'accounts/navigation' %>
    </div>
    <div class="col-12 col-lg-9">
      <h1 class="mb-4">Billing</h1>
      <div class="row">
        <div class="col col-lg-7">
          <div class="well p-3 rounded">
            <h2 class="h4">Payment method</h2>

            <% if @account.collection_method == 'send_invoice' %>
              <p>
                <%= bootstrap_icon 'file-text', width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'me-2' %>
                <strong>Invoice payment</strong> (NET <%= @account.days_until_due || 30 %> terms)
              </p>

              <% if @account.pending_invoice %>
                <div class="alert alert-info mb-2">
                  <p class="mb-1"><strong>Invoice due:</strong> <%= @account.pending_invoice.due_date.strftime('%b %d, %Y') %></p>
                  <p class="mb-1"><strong>Amount:</strong> <%= @account.pending_invoice.formatted_amount %></p>
                  <p class="mb-0"><strong>Status:</strong> <%= @account.pending_invoice.status.titleize %></p>
                </div>
                <p class="small">
                  <a href="<%= @account.pending_invoice.invoice_url %>" target="_blank" class="btn btn-sm btn-primary">Pay Invoice</a>
                </p>
              <% else %>
                <p class="text-muted small">No pending invoices</p>
              <% end %>

              <hr class="my-2">
              <p class="small text-muted mb-0">
                <strong>Payment instructions:</strong><br>
                Invoices will be sent to <%= @account.email %> with payment instructions.
              </p>
            <% else %>
              <p>
                <%= bootstrap_icon 'credit-card', width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'me-2' %>
                <%= @account.payment_method_type %> ending in <code><%= @account.payment_method_last4 %></code> expiry <code><%= @account.payment_method_expiry %></code>
              </p>
              <p class="small"><a href="#">Add new</a>  <a href="#">Edit</a></p>
            <% end %>
          </div>
        </div>
        <div class="col col-lg-5">
          <h2 class="h6 fw-normal">Your plan</h2>
          <h3 class="h4"><%= @account.plan_name %></h3>
          <p class="small"><strong><%= number_with_delimiter(@account.plan_requests) %> requests</strong> per hour at <strong>$<%= @account.plan_price %></strong> per month</p>
          <p class="small mb-0">Billed <em><%= @account.plan_billing_period %></em></p>
          <p class="small"><a href="<%= plan_account_path %>">Change</a></p>
          <hr />
          <% if @account.next_payment_date %>
            <p class="small mb-0">Next payment due <strong><%= @account.next_payment_date.strftime('%b %d, %Y') %></strong></p>
          <% end %>
        </div>
      </div>
      <h2 class="h3 mt-4 mb-3">Billing history</h2>
      <% if @account.billing_history.any? %>
        <div class="table-responsive">
          <table class="table">
            <thead class="table-light">
              <tr>
                <th scope="col">Month</th>
                <th scope="col">Amount</th>
                <th scope="col">Invoice</th>
              </tr>
            </thead>
            <tbody>
              <% @account.billing_history.each do |invoice| %>
                <tr>
                  <td><%= invoice.month %></td>
                  <td><%= invoice.formatted_amount %></td>
                  <td><a href="<%= invoice.invoice_url %>">View Invoice</a></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="well p-4 text-center">
          <p class="text-muted mb-0">No billing history yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
