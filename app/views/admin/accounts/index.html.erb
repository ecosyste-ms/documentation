<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Accounts</h1>
  </div>

  <%= form_with url: admin_accounts_path, method: :get, class: "mb-4" do |f| %>
    <div class="row">
      <div class="col-md-4">
        <%= f.text_field :search, class: "form-control", placeholder: "Search by email or name", value: params[:search] %>
      </div>
      <div class="col-md-3">
        <%= f.select :status, [['All statuses', ''], ['Active', 'active'], ['Suspended', 'suspended']], {}, class: "form-select" %>
      </div>
      <div class="col-md-3">
        <%= f.select :plan_id, [['All plans', '']] + Plan.active_plans.map { |p| [p.name, p.id] }, {}, class: "form-select" %>
      </div>
      <div class="col-md-2">
        <%= f.submit "Filter", class: "btn btn-primary w-100" %>
      </div>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Plan</th>
          <th>Status</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td><%= account.name %></td>
            <td><%= account.email %></td>
            <td><%= account.plan_name %></td>
            <td><span class="badge bg-<%= account.active? ? 'success' : 'secondary' %>"><%= account.status %></span></td>
            <td><%= account.created_at.strftime('%b %d, %Y') %></td>
            <td>
              <%= link_to 'View', admin_account_path(account), class: 'btn btn-sm btn-outline-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
