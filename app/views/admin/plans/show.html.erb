<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @plan.name %></h1>
    <div>
      <% if @plan.public %>
        <%= button_to 'Grandfather', grandfather_admin_plan_path(@plan), method: :post, class: 'btn btn-warning' %>
      <% end %>
      <%= link_to 'Edit', edit_admin_plan_path(@plan), class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Plan Details</h5>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-4">Slug:</dt>
            <dd class="col-sm-8"><code><%= @plan.slug %></code></dd>

            <dt class="col-sm-4">Display Name:</dt>
            <dd class="col-sm-8"><%= @plan.display_name %></dd>

            <dt class="col-sm-4">Price:</dt>
            <dd class="col-sm-8"><%= @plan.formatted_price %> / <%= @plan.billing_period %></dd>

            <dt class="col-sm-4">Requests:</dt>
            <dd class="col-sm-8"><%= number_with_delimiter(@plan.requests_per_hour) %> / hour</dd>

            <dt class="col-sm-4">Plan Family:</dt>
            <dd class="col-sm-8"><%= @plan.plan_family %></dd>

            <dt class="col-sm-4">Version:</dt>
            <dd class="col-sm-8">v<%= @plan.version %></dd>

            <dt class="col-sm-4">Active Subscribers:</dt>
            <dd class="col-sm-8"><%= @plan.subscriber_count %></dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Active Subscriptions</h5>
        </div>
        <div class="card-body">
          <% if @subscriptions.any? %>
            <table class="table table-sm mb-0">
              <thead>
                <tr>
                  <th>Account</th>
                  <th>Status</th>
                  <th>Since</th>
                </tr>
              </thead>
              <tbody>
                <% @subscriptions.each do |subscription| %>
                  <tr>
                    <td><%= link_to subscription.account.email, admin_account_path(subscription.account) %></td>
                    <td><span class="badge bg-success"><%= subscription.status %></span></td>
                    <td><%= subscription.created_at.strftime('%b %d, %Y') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <p class="text-muted mb-0">No active subscriptions</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
